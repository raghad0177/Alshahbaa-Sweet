 .alert {
            position: relative;
            display: inline-block;
            width: 100%;
            margin: 15px 0;
        }

        .alert input {
            display: none;
        }

        .alert input:checked ~ * {
            animation-name: dismiss, hide;
            animation-duration: 300ms;
            animation-iteration-count: 1;
            animation-timing-function: ease;
            animation-fill-mode: forwards;
            animation-delay: 0s, 100ms;
        }

        .alert.warning .inner {
            border: 1px solid rgb(251, 238, 213);
            background-color: rgb(252, 248, 227);
            padding: 10px;
            border-radius: 5px;
            color: rgb(192, 152, 83);
            display: flex;
            align-items: center;
        }

        .alert.warning .inner i {
            margin-right: 10px;
            color: rgb(192, 152, 83);
        }

        .alert.warning .close {
            position: absolute;
            top: 5px;
            right: 10px;
            cursor: pointer;
            color: rgb(192, 152, 83);
        }

        .alert.warning .close i {
            font-size: 16px;
        }

        @@keyframes dismiss {
            0% {
                opacity: 1;
            }
            90%, 100% {
                opacity: 0;
                font-size: 0.1px;
                transform: scale(0);
            }
        }

        @@keyframes hide {
            100% {
                height: 0px;
                width: 0px;
                overflow: hidden;
                margin: 0px;
                padding: 0px;
                border: 0px;
            }
        }

		

