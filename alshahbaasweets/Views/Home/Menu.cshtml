	<script>
		const apiUrl = 'http://localhost:5097/api';

		// Fetch categories and display them as tabs
		async function fetchCategories() {
			const response = await fetch(`${apiUrl}/Categories`);
			const categories = await response.json();
			const tabsContainer = document.getElementById('tabs-container');
			const productsContainer = document.getElementById('products-container');

			categories.forEach((category, index) => {
				// Create a tab for each category
				const tab = document.createElement('li');
				if (index === 0) tab.classList.add('active'); // Mark the first tab as active
				tab.innerHTML = `<a href="#category-${category.categoryId}" data-toggle="tab">${category.name}</a>`;
				tabsContainer.appendChild(tab);

				// Create a corresponding tab content pane for each category
				const tabPane = document.createElement('div');
				tabPane.classList.add('tab-pane', 'fade');
				if (index === 0) tabPane.classList.add('in', 'active'); // Display the first tab-pane on load
				tabPane.id = `category-${category.categoryId}`;
				tabPane.innerHTML = `<div class="menu-simple container"></div>`; // Add `.container` for consistency
				productsContainer.appendChild(tabPane);

				// Fetch products for each category and display them
				fetchProductsByCategory(category.categoryId, tabPane);
			});
		}

		// Fetch products for a specific category and display them
		async function fetchProductsByCategory(categoryId, tabPane) {
			const response = await fetch(`${apiUrl}/Products/ByCategoryId/${categoryId}`);
			const products = await response.json();
			const menuSimple = tabPane.querySelector('.menu-simple');

			if (products.length > 0) {
				const row = document.createElement('div');
				row.classList.add('row'); // Wrap products in a row
				menuSimple.appendChild(row);

				products.forEach(product => {
					const dishPanel = document.createElement('div');
					dishPanel.classList.add('col-xs-12', 'col-sm-12', 'col-md-6');

					// Create product HTML
					dishPanel.innerHTML = `
						<!-- Dish Panel (Example) -->
		<div class="dish-panel">
			<div class="dish--img">
				<img src="${product.image}" alt="dish">
			</div>
			<div class="dish--content">
				<div class="dish--content-bio">
					<h3 class="dish--title">${product.name}</h3>
					<div class="dish--price">$${product.price}</div>
				</div>
				<p class="dish--desc">${product.description}</p>
		</div>

	
									`;
					row.appendChild(dishPanel); // Append each product to the row
				});
			} else {
				menuSimple.innerHTML = '<p>No products available for this category.</p>';
			}
		}

		// Initialize the page by fetching categories
		fetchCategories();
	</script>

