  <script>
   document.getElementById('updateUserForm').addEventListener('submit', async function (event) {
    event.preventDefault();

    const userId = localStorage.getItem('userId');
    if (!userId) {
        alert('لا يوجد معرف مستخدم في التخزين المحلي. يرجى تسجيل الدخول أولاً.');
        return;
    }

    const formData = new FormData();
    const name = document.getElementById('name').value.trim();
    const phoneNumber = document.getElementById('phoneNumber').value.trim();
    const address = document.getElementById('address').value.trim();
    const password = document.getElementById('password').value.trim();

    // Add fields only if they are provided
    if (name) formData.append('Name', name);
    if (phoneNumber) formData.append('PhoneNumber', phoneNumber);
    if (address) formData.append('Address', address);
    if (password) formData.append('Password', password);

    try {
        const response = await fetch(`http://localhost:5097/api/Users/UpdateUser/${userId}`, {
            method: 'PUT',
            headers: {
                'accept': '*/*', // Accept any response
            },
            body: formData, // Send FormData
        });

        const result = await response.json();

        if (response.ok) {
            alert('تم تحديث البيانات بنجاح!');
            // Optionally update UI with new data
        } else {
            alert(result.message || 'حدث خطأ ما!');
        }
    } catch (error) {
        console.error('Error updating user:', error);
        alert('فشل في تحديث المستخدم. يرجى المحاولة لاحقًا.');
    }
});

